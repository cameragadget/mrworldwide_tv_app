<hi>Edit this video!</hi>

<%= form_for @video do |f| %>

<div>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :released_on %>
  <%= f.date_select :released_on, order: [:month, :day, :year] %>
  <br>
  <%= f.label :embed_url, "YouTube ID" %>
  <%= f.text_field :embed_url %>

</div>

  <%= f.submit "Submit these changes!" %>

<% end %>

<%= link_to "Back to the list!", videos_path %>
